{
  "manifest_version": 2,
  "name": "GraphQL tools by Stiger",
  "version": "1.0",
  "description": "Chrome extension for the GraphiQL tool",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Launch GraphiQL",
    "default_icon": "icons/logo.png"
  },
  "incognito": "split",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]
}